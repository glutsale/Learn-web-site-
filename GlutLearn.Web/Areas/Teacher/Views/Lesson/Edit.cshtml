@model GlutLearn.ViewModels.LessonInfoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LessonInfoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <select asp-for="CourseId" class="form-control">
                <option value="">Выберите курс</option>
                @foreach (var course in Model.CourseList)
                {
                    <option value="@course.Id">@course.Name</option>
                }
            </select>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Homework" class="control-label"></label>
                <input asp-for="Homework" class="form-control" />
                <span asp-validation-for="Homework" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoLink" class="control-label"></label>
                <input asp-for="VideoLink" class="form-control" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

